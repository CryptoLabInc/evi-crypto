{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "binaryDir": "${sourceDir}/build"
    },
    {
      "name": "release",
      "displayName": "Release build",
      "inherits": "default",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "client",
      "displayName": "Build python on Linux",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "BUILD_PYTHON": "ON"
      }
    },
    {
      "name": "client-arm64",
      "displayName": "Build python on MacOS ARM64",
      "inherits": "client",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_CXX_FLAGS": "-O2 -fPIC",
        "CMAKE_CXX_EXTENSIONS": "ON",
        "OPENSSL_ROOT_DIR": "/opt/homebrew/opt/openssl@3",
        "OPENSSL_LIBRARIES": "/opt/homebrew/opt/openssl@3/lib",
        "OPENSSL_INCLUDE_DIR": "/opt/homebrew/opt/openssl@3/include",
        "OpenMP_CXX_FLAGS": "-Xpreprocessor -fopenmp -I/opt/homebrew/opt/libomp/include",
        "OpenMP_CXX_LIB_NAMES": "omp",
        "OpenMP_omp_LIBRARY": "/opt/homebrew/opt/libomp/lib/libomp.dylib"
      }
    },
    {
      "name": "envector-compute-cpu",
      "inherits": "release",
      "generator": "Ninja",
      "cacheVariables": {
        "BUILD_TEST": "OFF",
        "BUILD_EXAMPLE": "OFF",
        "BUILD_WITH_VALGRIND": "OFF",
        "BUILD_AS_STATIC": "ON",
        "ENABLE_IVF": "OFF",
        "BUILD_C_API": "ON"
      }
    },
    {
      "name": "envector-compute-cpu-test",
      "inherits": "envector-compute-cpu",
      "cacheVariables": {
        "BUILD_TEST": "ON"
      }
    },
    {
      "name": "envector-compute",
      "inherits": "release",
      "generator": "Ninja",
      "cacheVariables": {
        "BUILD_TEST": "OFF",
        "BUILD_EXAMPLE": "OFF",
        "BUILD_WITH_VALGRIND": "OFF",
        "BUILD_AS_STATIC": "ON",
        "ENABLE_IVF": "OFF",
        "BUILD_C_API": "ON"
      }
    },
    {
      "name": "envector-compute-gpu-test",
      "inherits": "envector-compute",
      "cacheVariables": {
        "BUILD_TEST": "ON"
      }
    },
    {
      "name": "test",
      "inherits": "release",
      "installDir": "${sourceDir}/build/install",
      "cacheVariables": {
        "BUILD_TEST": "ON",
        "BUILD_WITH_VALGRIND": "ON"
      }
    },
    {
      "name": "clang-ci",
      "inherits": "release",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_C_COMPILER": "clang"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "configurePreset": "default"
    },
    {
      "name": "envector-compute-cpu",
      "configurePreset": "envector-compute-cpu",
      "configuration": "release",
      "jobs": 4
    },
    {
      "name": "envector-compute-cpu-test",
      "configurePreset": "envector-compute-cpu-test",
      "configuration": "release",
      "jobs": 4
    },

    {
      "name": "envector-compute",
      "configurePreset": "envector-compute",
      "configuration": "release",
      "jobs": 4
    },
    {
      "name": "envector-compute-gpu-test",
      "configurePreset": "envector-compute-gpu-test",
      "configuration": "release",
      "jobs": 4
    },
    {
      "name": "test",
      "configurePreset": "test",
      "configuration": "release",
      "jobs": 8
    }
  ],

  "testPresets": [
    {
      "name": "test-base",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error"
      }
    },
    {
      "name": "all-test",
      "inherits": "test-base",
      "configurePreset": "test",
      "configuration": "release"
    }
  ]
}
